{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignore": [".github/*", "web/.next/*", "web/node_modules/*"]
  },
  "formatter": { "enabled": true, "indentStyle": "space" },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useExportType": {
          "level": "info",
          "fix": "none"
        }
      },
      "recommended": true
    }
  },
  "organizeImports": { "enabled": true }
}
